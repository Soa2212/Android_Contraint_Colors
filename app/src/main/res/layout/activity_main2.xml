<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <LinearLayout
        android:id="@+id/cuadro1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/green"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:height="60dp"
            android:text="@string/title_app"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="italic"
            android:layout_marginStart="200dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:width="300dp"
            android:height="60dp"
            android:text="@string/Subtitle_app"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="italic" />
    </LinearLayout>


    <View
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:background="@color/azu"
        app:layout_constraintBottom_toTopOf="@+id/Rojo"
        app:layout_constraintTop_toBottomOf="@+id/cuadro1"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="195dp" />

    <View
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:background="@color/azu"
        app:layout_constraintBottom_toTopOf="@+id/Rojo"
        app:layout_constraintTop_toBottomOf="@+id/cuadro1"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="497dp" />

    <View
        android:id="@+id/Rojo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </View>


</androidx.constraintlayout.widget.ConstraintLayout>